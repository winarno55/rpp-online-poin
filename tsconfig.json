{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "api/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
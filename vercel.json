{
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/bundle.js",
      "destination": "/bundle.js"
    },
    {
      "source": "((?!api/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}